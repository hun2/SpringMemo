<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.example.Memo.Dao.UserDAO">
 
 	<select id="existLoginId" resultType="boolean" parameterType="String">
 		SELECT
 			COUNT(*)
 		FROM
 			user
 		where
 			`loginId` = #{loginId}
 	</select> 
 
 
 	<insert id="insertUserId" parameterType="map">
 		INSERT INTO user
 		(
			`loginId`
			,`password`
			,`name`
			,`email`
			,`createdAt`
			,`updatedAt`
 		)
 		VALUES
 		(
 			#{loginId}
 			,#{password}
 			,#{name}
 			,#{email}
 			, NOW()
 			, NOW()
 		)
 	</insert>
 	
 	
 	<select id="selectLoginIdPassword" parameterType="map" resultType="com.example.Memo.model.User">
 		SELECT
 			`id
			,`loginId`
			,`password`
			,`name`
			,`email`
			,`createdAt`
			,`updatedAt`
 		FROM
 			user
 		WHERE
 			`loginId` = #{loginId}
 		AND
 			`password` = #{password}
 	</select>
 </mapper>